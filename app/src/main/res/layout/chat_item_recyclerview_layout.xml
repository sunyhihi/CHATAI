<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >

    <LinearLayout
        android:layout_marginTop="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:id="@+id/right_chat_view"
        android:layout_marginStart="60dp"
        >
        <LinearLayout
            android:layout_marginRight="11dp"
            android:background="@drawable/shape_explain_item"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:paddingLeft="17dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:paddingRight="10dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/right_chat_text_view"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/white"
                android:textSize="13sp"
                android:fontFamily="@font/poppins_medium"/>
            <ImageView
                android:id="@+id/copyUserImg"
                android:layout_width="31dp"
                android:layout_height="31dp"
                android:src="@drawable/item_copy"
                android:scaleType="centerCrop"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="45dp"
            android:layout_height="39dp"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/shape_person_brg">
            <ImageView
                android:layout_width="27dp"
                android:layout_height="28dp"
                android:src="@drawable/item_person"
                android:scaleType="centerCrop"
                />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="12dp"
        android:layout_marginEnd="80dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/left_chat_view"
        >

        <LinearLayout
            android:layout_width="45dp"
            android:layout_height="39dp"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/shape_person_brg_blue">
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/img_chatscreen_logo"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="9dp"
            android:layout_weight="1"
            android:background="@drawable/shape_explain_item_blue"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:paddingLeft="17dp"
            android:paddingRight="15dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/left_chat_text_view"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/white"
                android:textSize="13sp"
                android:fontFamily="@font/poppins_medium"/>
            <ImageView
                android:id="@+id/copyAIImg"
                android:layout_marginLeft="8dp"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:src="@drawable/item_copy_white"
                android:scaleType="centerCrop"
                />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>