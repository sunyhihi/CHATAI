<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/backgroundLinear"
    tools:context=".Explain_Code_Activity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#16202B">
        <LinearLayout
            android:id="@+id/topbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:weightSum="2"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/backLinear"
                android:layout_width="49dp"
                android:layout_height="45dp"
                android:background="@drawable/shape_setting_brg"
               android:gravity="center"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/backImg"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:src="@drawable/item_arrow"
                    />
            </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/addFavouritesLinear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add to Favourites"
                    android:textSize="11sp"
                    android:fontFamily="@font/poppins"
                    android:textColor="#969FB0"/>
                <ImageView
                    android:id="@+id/startImg"
                    android:scaleType="centerCrop"
                    android:layout_width="47dp"
                    android:layout_height="47dp"
                    android:src="@drawable/item_start_yellow_light"
                    />
            </LinearLayout>
        </LinearLayout>
        </LinearLayout>
        <View
            android:id="@+id/linetop"
            android:layout_below="@id/topbar"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#213042"/>
        <ScrollView
            android:id="@+id/itemScr"
            android:layout_below="@+id/linetop"
            android:layout_above="@+id/bottom"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:paddingLeft="12dp"
                    android:paddingBottom="12dp"
                    android:paddingTop="12dp"
                    android:paddingRight="12dp"
                    android:background="@drawable/shape_suggested_text_"
                    android:layout_width="match_parent"
                    android:layout_height="82dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/iconImg"
                        android:scaleType="centerCrop"
                        android:layout_width="59dp"
                        android:layout_height="59dp"
                        android:src="@drawable/item_logo"/>
                    <LinearLayout
                        android:layout_marginLeft="6dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/titleTv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Explain Code"
                            android:textSize="13sp"
                            android:fontFamily="@font/poppins_medium"
                            android:textColor="@color/white"/>
                        <TextView
                            android:id="@+id/descripTv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="Explain a complicated piece of code."
                            android:textSize="11sp"
                            android:fontFamily="@font/poppins_medium"
                            android:textColor="#969FB0"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="What is the code?*"
                            android:textColor="@color/white"
                            android:textSize="13sp"
                            android:fontFamily="@font/poppins"
                            />
                        <LinearLayout
                            android:layout_marginTop="15dp"
                            android:background="@drawable/shape_explain_item"
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:paddingBottom="12dp"
                            android:paddingLeft="17dp"
                            android:paddingRight="17dp"
                            android:paddingTop="12dp"
                            android:orientation="horizontal">
                            <EditText
                                android:id="@+id/contentEdt"
                                android:background="#00FFFFFF"
                                android:layout_weight="1"
                                android:gravity="left"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:hint="Type here..."
                                android:textColorHint="#969FB0"
                                android:text=""
                                android:textColor="@color/white"
                                android:textSize="13sp"
                                android:fontFamily="@font/poppins"/>
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>



        </ScrollView>
        <LinearLayout
            android:id="@+id/bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical"
            android:paddingTop="13dp"
            android:paddingBottom="13dp"
            >
            <View
                android:layout_marginBottom="19dp"
                android:id="@+id/lineBottom"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#213042"/>
            <LinearLayout
                android:id="@+id/gennerateLinear"
                android:paddingTop="13dp"
                android:paddingBottom="13dp"
                android:paddingRight="27dp"
                android:background="@drawable/shape_person_brg_share"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:textSize="17sp"
                    android:paddingLeft="27dp"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Generate"
                    android:textColor="@color/white"
                    android:fontFamily="@font/poppins_medium"
                    />
                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/item_send"
                    />
            </LinearLayout>


        </LinearLayout>
    </RelativeLayout>
</LinearLayout>