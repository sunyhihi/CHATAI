<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
        <LinearLayout
            android:layout_margin="20dp"
            android:background="@drawable/shape_poppup_language"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:paddingRight="14dp"
            android:paddingLeft="13dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:text="What is your paragraph about?*"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:fontFamily="@font/poppins_medium"
                android:textColor="@color/white"
                android:layout_marginTop="26dp"
                />
            <LinearLayout
                android:layout_marginTop="15dp"

                android:background="@drawable/shape_poppup_language_item"
                android:paddingLeft="14dp"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:paddingRight="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/englishLinear"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="13sp"
                    android:text="Spoken Responses"
                    />
                <ImageView
                    android:id="@+id/soundImg"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/item_volum"/>
            </LinearLayout>
            <TextView
                android:layout_marginBottom="24dp"
                android:text="What is your paragraph about?*"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:fontFamily="@font/poppins_medium"
                android:textColor="#969FB0"
                android:layout_marginTop="13dp"
                />






        </LinearLayout>

</LinearLayout>