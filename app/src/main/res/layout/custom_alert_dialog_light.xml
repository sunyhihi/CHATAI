<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#00000000"
    android:layout_margin="16dp"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="22dp"
        android:paddingBottom="18dp"
        android:background="@drawable/shape_explain_item"
        android:gravity="center">
        <ImageView
            android:scaleType="centerCrop"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/item_light_white"
            />
        <TextView
           android:layout_margin="10dp"
            android:layout_marginTop="7dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add a unique flair to your writing, experiment with different word combinations like 'witty', 'friendly', 'disappointed', 'polite', 'creative', and 'professional', or even draw inspiration from a well-known figure like Tolstoy."
            android:textColor="@color/white"
            android:fontFamily="@font/poppins"
            android:textSize="11sp"
            />
        <Button
            android:id="@+id/okBtn"
            android:layout_margin="10dp"
            android:background="@drawable/rounded_corner_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:fontFamily="@font/poppins_medium"
            android:textColor="@color/white"
            android:text="OK"/>
    </LinearLayout>
</LinearLayout>